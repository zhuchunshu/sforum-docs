name: Deploy to Server

on:
  push:
    branches:
      - main

jobs:
  deploy:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout code
        uses: actions/checkout@v2

      - name: Install dependencies
        uses: actions/setup-node@v2
        with:
          node-version: '14.x'

      - name: Build
        run: npm run docs:build

      - name: Deploy
        run: |
          sshpass -p ${{ secrets.SERVER_PASSWORD }} scp -r ./src/.vuepress/dist/* root@${{ secrets.SERVER_IP }}:/root/www/sforum-docs
